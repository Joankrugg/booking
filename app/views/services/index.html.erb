<div class="container py-5">

  <h1 class="fw-bold mb-4">Découvrez nos prestations</h1>

  <div class="row g-4">

    <% @services.each do |service| %>

      <div class="col-md-4 col-sm-6">
        <div class="card service-card h-100 shadow-sm">
          <% if service.photo.attached? %>
            <%= image_tag service.photo, height: 180, width: 320, crop: :fill, class: "card-img-top" %>
          <% else %>
            <div class="bg-light d-flex align-items-center justify-content-center" style="height:180px; border-radius:12px;">
              <span class="text-muted">Aucune image</span>
            </div>
          <% end %>

          <div class="card-body">
            <h5 class="fw-bold mb-1 text-primary"><%= service.name %></h5>

            <p class="text-muted small mb-2">
              <%= truncate(service.description, length: 90) %>
            </p>

            <p class="fw-bold mb-3 text-dark">
              <%= service.price_euros %> € • <%= service.duration_minutes %> min
            </p>

            <a class="btn btn-primary w-100" href="<%= service_path(service) %>">
              Voir & Réserver
            </a>
          </div>

        </div>
      </div>
    <% end %>

  </div>
</div>

<style>
  .service-card {
    border-radius: 16px;
    transition: transform 0.15s ease, box-shadow 0.15s ease;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 20px rgba(0,0,0,0.12);
  }
</style>
