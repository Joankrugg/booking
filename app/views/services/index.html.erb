<% @services.each do |service| %>
  <div class="list-group-item d-flex justify-content-between align-items-center">

    <div>
      <strong><%= service.name %></strong><br>
      <small class="text-muted">
        <%= service.duration_minutes %> min – <%= service.price_euros %> €
      </small>
    </div>

    <div>
      <%= link_to "Gérer", edit_provider_service_path(service), class: "btn btn-sm btn-outline-secondary" %>
      <%= link_to "Supprimer", provider_service_path(service),
            method: :delete,
            data: { confirm: "Supprimer ce service ?" },
            class: "btn btn-sm btn-danger ms-2" %>
    </div>

  </div>
<% end %>