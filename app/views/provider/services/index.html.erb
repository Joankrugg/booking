<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3">Vos services</h1>
  <%= link_to "➕ Nouveau service", new_provider_service_path, class: "btn btn-primary" %>
</div>

<% if @services.empty? %>
  <div class="alert alert-info">
    Vous n'avez encore créé aucun service.
  </div>
<% else %>
  <div class="list-group">
    <% @services.each do |service| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">

        <div>
          <strong><%= service.name %></strong><br>
          <small class="text-muted">
            <%= service.duration_minutes %> min – <%= service.price_euros %> €
          </small>
        </div>

        <div>
          <%= link_to "Gérer", edit_provider_service_path(service), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "Supprimer", provider_service_path(service),
                method: :delete,
                data: { confirm: "Supprimer ce service ?" },
                class: "btn btn-sm btn-danger ms-2" %>
        </div>

      </div>
    <% end %>
  </div>
<% end %>
