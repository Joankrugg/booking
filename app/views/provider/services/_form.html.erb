<%= form_with model: [:provider, service], class: "mt-3" do |f| %>

  <div class="mb-3">
    <%= f.label :name, "Nom", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Description", class: "form-label" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :duration_minutes, "Durée (minutes)", class: "form-label" %>
    <%= f.number_field :duration_minutes, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :price_euros, "Prix (€)", class: "form-label" %>
    <%= f.number_field :price_euros, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :service_type_id, "Type de prestation", class: "form-label" %>
    <%= f.collection_select :service_type_id, ServiceType.all, :id, :name, {}, class: "form-select" %>
  </div>

  <%= f.submit "Enregistrer", class: "btn btn-primary" %>
<% end %>
