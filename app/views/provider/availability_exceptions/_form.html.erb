<%= form_with(model: [:provider, @service, @exception], class: "card p-4 shadow-sm") do |f| %>

  <div class="mb-3">
    <%= f.label :date, "Date concernée", class: "form-label" %>
    <%= f.date_field :date, class: "form-control", required: true %>
  </div>

  <div class="alert alert-secondary py-2">
    <strong>Note :</strong>
    si vous laissez les horaires vides, la journée entière sera bloquée.
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :start_time, "Heure de début (optionnel)", class: "form-label" %>
      <%= f.time_field :start_time, class: "form-control" %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :end_time, "Heure de fin (optionnel)", class: "form-label" %>
      <%= f.time_field :end_time, class: "form-control" %>
    </div>
  </div>

  <div class="d-flex justify-content-end mt-3">
    <%= f.submit "Créer l'exception", class: "btn btn-primary" %>
  </div>

<% end %>
