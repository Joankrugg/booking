<h1 class="h4 mb-4">
  Zones de prestation pour <%= @service.name %>
</h1>

<div class="mb-3">
  <%= link_to "➕ Ajouter une zone",
      new_provider_service_service_area_path(@service),
      class: "btn btn-primary" %>

  <%= link_to "← Retour au service",
      edit_provider_service_path(@service),
      class: "btn btn-link" %>
</div>

<% if @areas.empty? %>
  <div class="alert alert-info">
    Aucune zone définie pour ce service pour l’instant.
  </div>
<% else %>
  <table class="table table-bordered align-middle">
    <thead>
      <tr>
        <th>Adresse</th>
        <th>Rayon (km)</th>
        <th style="width: 160px;"></th>
      </tr>
    </thead>
    <tbody>
      <% @areas.each do |area| %>
        <tr>
          <td><%= area.address %></td>
          <td><%= area.radius_km %></td>
          <td class="text-end">
            <%# Si tu ajoutes edit/update dans les routes, tu peux décommenter ça : %>
            <%#= link_to "Modifier",
                  edit_provider_service_service_area_path(@service, area),
                  class: "btn btn-sm btn-outline-secondary me-2" %>

            <%= link_to "Supprimer",
                provider_service_service_area_path(@service, area),
                data: { turbo_method: :delete, turbo_confirm: "Supprimer cette zone ?" },
                class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
