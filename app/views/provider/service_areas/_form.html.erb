<%= form_with model: [:provider, service, area], class: "mt-3" do |f| %>

  <div class="mb-3">
    <%= f.label :address, "Adresse", class: "form-label" %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :radius_km, "Rayon (km)", class: "form-label" %>
    <%= f.number_field :radius_km, class: "form-control" %>
  </div>

  <%= f.submit "Enregistrer", class: "btn btn-primary" %>
<% end %>
